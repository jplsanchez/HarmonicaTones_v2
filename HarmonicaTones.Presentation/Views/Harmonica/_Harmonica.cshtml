@model HT.Presentation.Models.HarmonicaViewModel

<div class="d-flex p-2 justify-content-between">
    <table class="mx-auto">
        <thead/>
        <tbody>
            <tr class=" Blow text-center">
                @foreach (var item in Model.BlowNotes)
                {
                    @if( item.Item2)
                    {
                        <th class="btn btn-warning btn-harmonica-hole">
                            @Html.DisplayFor(d => item.Item1)
                        </th>
                    } 
                    @if(!item.Item2)
                    {
                        <th class="btn btn-outline-warning btn-harmonica-hole">
                            @Html.DisplayFor(d => item.Item1)
                        </th>
                    } 

                    <th></th>
                }
            </tr>
            <tr class=" Number text-center">
                @for (var i = 0; i < Model.BlowNotes.Count; i++)
                {
                    <th class="text-center">
                        @(i+1)
                    </th>
                    <th></th>
                }
            </tr>
            <tr class=" Draw text-center">
                @foreach (var item in Model.DrawNotes)
                {
                    @if( item.Item2)
                    {
                        <th class="btn btn-warning btn-harmonica-hole">
                            @Html.DisplayFor(d => item.Item1)
                        </th>
                    } 
                    @if(!item.Item2)
                    {
                        <th class="btn btn-outline-warning btn-harmonica-hole">
                            @Html.DisplayFor(d => item.Item1)
                        </th>
                    } 
                    <th></th>
                }
            </tr>
            <tr class=" Bend1 text-center">
                @foreach (var item in Model.Bend1Notes)
                {
                    <th>
                    @if (item.Item1 != "")
                    {
                        @if( item.Item2)
                        {
                            <div class="btn btn-warning btn-harmonica-hole">
                                @Html.DisplayFor(d => item.Item1)
                            </div>
                        } 
                        @if(!item.Item2)
                        {
                            <div class="btn btn-outline-warning btn-harmonica-hole">
                                @Html.DisplayFor(d => item.Item1)
                            </div>
                        } 
                    }
                    </th>
                    <th></th>
                }
            </tr>
            <tr class=" Bend2 text-center">
                @foreach (var item in Model.Bend2Notes)
                {
                    <th>
                    @if (item.Item1 != "")
                    {
                        @if( item.Item2)
                        {
                            <div class="btn btn-warning btn-harmonica-hole">
                                @Html.DisplayFor(d => item.Item1)
                            </div>
                        } 
                        @if(!item.Item2)
                        {
                            <div class="btn btn-outline-warning btn-harmonica-hole">
                                @Html.DisplayFor(d => item.Item1)
                            </div>
                        } 
                    }
                    </th>
                    <th></th>
                }
            </tr>
            <tr class=" Bend3 text-center">
                @foreach (var item in Model.Bend3Notes)
                {
                    <th>
                    @if (item.Item1 != "")
                    {
                        @if( item.Item2)
                        {
                            <div class="btn btn-warning btn-harmonica-hole">
                                @Html.DisplayFor(d => item.Item1)
                            </div>
                        } 
                        @if(!item.Item2)
                        {
                            <div class="btn btn-outline-warning btn-harmonica-hole">
                                @Html.DisplayFor(d => item.Item1)
                            </div>
                        } 
                    }
                    </th>
                    <th></th>
                }
            </tr>
        </tbody>
    </table>
    <div class="p-1">
        <a href="#"><i class="fa fa-facebook-square fa-2x"></i></a>
        <a href="#"><i class="fa fa-twitter fa-2x"></i></a>
        <a href="#"><i class="fa fa-google-plus fa-2x"></i></a>
    </div>
</div>